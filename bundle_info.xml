<!--
ChimeraX bundle names must start with "ChimeraX-"
to avoid clashes with package names in pypi.python.org.
When uploaded to the ChimeraX toolshed, the bundle
will be displayed without the ChimeraX- prefix.
-->

<BundleInfo name="ChimeraX-CiliaBuilder"
	    version="1.0.6" package="chimerax.ciliabuilder"
  	    minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>Bui lab@McGill</Author>
  <Email>huy.bui@mcgill.ca</Email>
  <URL>https://github.com/builab/CiliaBuilder</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Cilia Model Builder</Synopsis>
  <Description>
  Implements CiliaBuilder ChimeraX as model or with ArtiaX.
  </Description>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="EM, Structure Analysis, Visualization"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=1.1"/>
    <Dependency name="ChimeraX-UI" version=">=1.1"/>
    <Dependency name="numpy" version=">=2.0.0"/>
    <Dependency name="pandas" version=">=2.2.2"/>
    <Dependency name="scipy" version=">=1.13.0"/>
  </Dependencies>

  <!-- Non-Python files that are part of package -->
  <DataFiles>
    <DataFile>docs/user/commands/ciliabuild.html</DataFile>
    <DataFile>docs/user/commands/centriolebuild.html</DataFile>
    <DataFile>docs/user/commands/ciliabuild_from_csv.html</DataFile>
    <DataFile>docs/user/general/ciliabuilder_tutorial.html</DataFile>
    <DataFile>docs/user/tools/ciliabuilder.html</DataFile>
    <DataFile>docs/user/CiliaBuilder-icon.png</DataFile>
    <DataFile>geometry/primarycilia_template.csv</DataFile>
    <DataFile>geometry/primarycilia_good.csv</DataFile>

  </DataFiles>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 3 - Alpha</PythonClassifier>
    <PythonClassifier>License :: Freeware</PythonClassifier>
    <!-- ChimeraX classifiers describe supplied functionality -->
    <!-- Register a graphical interface tool -->
    <ChimeraXClassifier>ChimeraX :: Tool :: Cilia Builder ::
      Higher-Order Structure :: Cilia Simulation</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Command :: ciliabuild :: General ::
	Cilia Simulation</ChimeraXClassifier>
	<ChimeraXClassifier>ChimeraX :: Command :: centriolebuild :: General ::
	Centriole Simulation</ChimeraXClassifier>
	<ChimeraXClassifier>ChimeraX :: Command :: ciliabuild_from_csv :: General ::
	Centriole Simulation</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>